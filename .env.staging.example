NODE_ENV=staging
PORT=5000

# Database
MONGODB_URI=mongodb://username:password@staging-mongodb:27017/stayhub-staging?authSource=admin

# JWT Configuration (use different secrets than production)
JWT_SECRET=staging_jwt_secret_key_different_from_prod
JWT_EXPIRE=1d
JWT_REFRESH_SECRET=staging_refresh_token_secret_different_from_prod
JWT_REFRESH_EXPIRE=7d

# OAuth (use test/staging credentials)
GOOGLE_CLIENT_ID=your_staging_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_staging_google_client_secret

# Cloudinary (use staging account)
CLOUDINARY_CLOUD_NAME=your_staging_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_staging_cloudinary_api_key
CLOUDINARY_API_SECRET=your_staging_cloudinary_api_secret

# Application
CLIENT_URL=https://staging.your-frontend-domain.com

# Redis
REDIS_URL=redis://staging-redis:6379

# Monitoring & Logging
LOG_LEVEL=debug
SENTRY_DSN=your_staging_sentry_dsn

# Rate Limiting (more lenient for testing)
RATE_LIMIT_WINDOW_MS=300000
RATE_LIMIT_MAX_REQUESTS=200

# Security
ALLOWED_ORIGINS=https://staging.your-frontend-domain.com,http://localhost:3000
TRUST_PROXY=1