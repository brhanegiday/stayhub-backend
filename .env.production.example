NODE_ENV=production
PORT=5000

# Database
MONGODB_URI=mongodb://username:password@mongodb-host:27017/stayhub?authSource=admin

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_32_chars_minimum
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_super_secure_refresh_token_secret_32_chars_minimum
JWT_REFRESH_EXPIRE=30d

# OAuth
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Application
CLIENT_URL=https://your-frontend-domain.com

# Redis (if using for sessions/caching)
REDIS_URL=redis://username:password@redis-host:6379

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_for_error_tracking

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
ALLOWED_ORIGINS=https://your-frontend-domain.com,https://admin.your-domain.com
TRUST_PROXY=1